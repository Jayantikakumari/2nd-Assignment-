#include <stdio.h>

#include<conio.h>

void main()

{

   int i,n,sum=0;

   clrscr();

   printf("Input number of terms : ");

   scanf("%d",&n);

   printf("\nThe odd numbers are :");

   for(i=1;i<=n;i++)

   {

     printf("%d ",2*i-1);

     sum+=2*i-1;

   }

   clrscr();

   printf("\nThe Sum of odd Natural Number upto %d terms : %d \n",n,sum);

   if(n*n==sum)

   {

        printf("It is a perfect square number.");

   }

   else

   {

        printf("It is not a perfect quare number.");

   }

   getch();

}
